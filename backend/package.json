{
    "name": "intern-management-backend",
    "version": "1.0.0",
    "description": "Production-ready backend for Intern Management System",
    "main": "dist/server.js",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "prod": "npm run build && npm start",
        "db:setup": "psql -U postgres -f ../database/schema.sql && psql -U postgres -f ../database/seed.sql"
    },
    "keywords": [
        "intern",
        "management",
        "express",
        "typescript"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "express": "^4.18.2",
        "pg": "^8.11.3",
        "jsonwebtoken": "^9.0.2",
        "bcrypt": "^5.1.1",
        "multer": "^1.4.5-lts.1",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "uuid": "^9.0.1",
        "cookie-parser": "^1.4.6"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.5",
        "@types/pg": "^8.10.9",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/bcrypt": "^5.0.2",
        "@types/multer": "^1.4.11",
        "@types/cors": "^2.8.17",
        "@types/uuid": "^9.0.7",
        "@types/cookie-parser": "^1.4.6",
        "typescript": "^5.3.3",
        "nodemon": "^3.0.2",
        "ts-node": "^10.9.2"
    }
}